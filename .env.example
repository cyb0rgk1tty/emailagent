# Database Configuration
DB_USER=emailagent_user
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
DB_HOST=postgres
DB_PORT=5432
DB_NAME=supplement_leads_db

# Database URL (constructed from above)
DATABASE_URL=postgresql://emailagent_user:CHANGE_THIS_SECURE_PASSWORD@postgres:5432/supplement_leads_db

# Email Configuration (Custom IMAP Server)
EMAIL_IMAP_HOST=imap.yourdomain.com
EMAIL_IMAP_PORT=993
EMAIL_SMTP_HOST=smtp.yourdomain.com
EMAIL_SMTP_PORT=587
EMAIL_ADDRESS=contact@nutricraftlabs.com
EMAIL_PASSWORD=YOUR_EMAIL_APP_PASSWORD

# Historical Email Backfill (Optional - for AI learning from past responses)
# Used to backfill historical emails and learn from your manual responses
# Only needed if you want to import past email conversations for AI training
# Leave commented out if not using this feature
#HISTORICAL_EMAIL_ADDRESS=your.email@domain.com
#HISTORICAL_EMAIL_PASSWORD=YOUR_PASSWORD
#HISTORICAL_IMAP_HOST=imap.domain.com
#HISTORICAL_IMAP_PORT=993
#BACKFILL_SUBJECT_FILTER=Contact Form:
#BACKFILL_LOOKBACK_DAYS=365
#BACKFILL_MAX_EMAILS=1000

# Application
SECRET_KEY=your-secret-key-for-jwt-tokens-CHANGE-THIS
ENVIRONMENT=development
DEBUG=true

# Redis
REDIS_URL=redis://redis:6379/0

# AI Configuration - OpenRouter
# Sign up at: https://openrouter.ai/
# Get your API key from: https://openrouter.ai/keys
#
# IMPORTANT: This is REQUIRED for the PydanticAI agents to work
OPENROUTER_API_KEY=sk-or-v1-YOUR_API_KEY_HERE

# Model Configuration
# Recommended setup:
# - Extraction: Claude Haiku (fast, cheap for data extraction)
# - Response: Claude Sonnet (high-quality for email drafting)
#
# Available models:
# - anthropic/claude-sonnet-4.5 (best quality, higher cost)
# - anthropic/claude-haiku-4.5 (fast, cost-effective)
# - anthropic/claude-3.5-sonnet (previous generation, still good)
# - anthropic/claude-3-haiku (previous generation, cheaper)
OPENROUTER_MODEL=anthropic/claude-sonnet-4.5
OPENROUTER_EXTRACTION_MODEL=anthropic/claude-haiku-4.5
OPENROUTER_RESPONSE_MODEL=anthropic/claude-sonnet-4.5

# Model Settings
# Temperature controls randomness (0.0 = deterministic, 1.0 = creative)
LLM_TEMPERATURE_EXTRACTION=0.3  # Lower for precise data extraction
LLM_TEMPERATURE_RESPONSE=0.7    # Higher for natural email writing
LLM_MAX_TOKENS=4000              # Maximum tokens per response
LLM_TIMEOUT=60                   # Timeout in seconds

# Optional: OpenAI API key for embeddings only
# Not required if using default embeddings
OPENAI_API_KEY=

# Optional: Monitoring & Error Tracking
SENTRY_DSN=
